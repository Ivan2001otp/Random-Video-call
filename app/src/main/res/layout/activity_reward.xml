<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blur"
    tools:context=".RewardActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:text="Friends"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:text="Wallet"
        android:textColor="#C29C5A"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@null"
        app:layout_constraintStart_toEndOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_goneMarginStart="10dp"
       />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_curr_coins_tv"
        android:drawableLeft="@drawable/coin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="10dp"
        android:text=" 100"
        android:textColor="#C29C5A"
        android:textSize="35sp"
        />

    <TextView
        android:padding="4dp"
        android:id="@+id/dummyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_curr_coins_tv"
        app:layout_constraintStart_toStartOf="@id/user_curr_coins_tv"
        app:layout_constraintEnd_toEndOf="@id/user_curr_coins_tv"
        app:layout_constraintBottom_toTopOf="@id/ll1"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:text="You can watch ads , to increase the number of coins. Have fun."
        android:layout_marginEnd="25dp"

        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:background="@drawable/wallet_act_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/dummyText"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/ad1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            app:srcCompat="@drawable/coin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 coins"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            android:textSize="22sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ads_icon"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:background="@drawable/wallet_act_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/ad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:gravity="center"

            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/coin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 coins"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            android:textSize="22sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ads_icon"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:id="@+id/ll3"
        android:background="@drawable/wallet_act_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/ad3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            app:srcCompat="@drawable/coin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="150 coins"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            android:textSize="22sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ads_icon"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll4"
            android:layout_width="match_parent"
        android:background="@drawable/wallet_act_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/ad4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            app:srcCompat="@drawable/coin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200 coins"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            android:textSize="22sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ads_icon"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>